{
  "manifest_version": 3,
  "name": "Selection Grabber",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Grab Selection",
    "default_popup": "new.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
  ,
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}